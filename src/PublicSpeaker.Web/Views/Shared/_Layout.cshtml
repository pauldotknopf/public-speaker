<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - my speaker</title>
    <link rel="stylesheet" href="~/index.8e6db5cb.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-light mb-3">
        <div class="navbar navbar-expand">
            <div class="container">
            <a href="@Url.Content("~/")" class="navbar-brand d-flex">
                <strong>my speaker</strong>
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="https://pknopf.com/"><i class="fa-solid fa-newspaper"></i>&nbsp;blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.instagram.com/the.paul.of.the.wild"><i class="fa-brands fa-instagram"></i>&nbsp;instagram</a>
                </li>
            </ul>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            @{
                var successMessage = (string)TempData["success"];
                var errorMessage = (string)TempData["error"];
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
        </div>
        @RenderBody()
    </main>
    <footer class="bg-light py-3 mt-5 text-muted text-center">
        <a href="https://github.com/pauldotknopf/public-speaker"><i class="fab fa-github"></i> source</a>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
